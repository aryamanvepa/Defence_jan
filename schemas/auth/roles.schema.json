{
  "title": "RolesConfig",
  "type": "object",
  "required": ["version", "roles"],
  "properties": {
    "version": { "type": "string" },
    "roles": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["allowed_entity_types", "max_clearance_cap"],
        "properties": {
          "allowed_entity_types": { "type": "array", "minItems": 1, "items": { "type": "string" } },
          "max_clearance_cap": { "type": "integer", "minimum": 0, "maximum": 10 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

