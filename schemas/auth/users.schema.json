{
  "title": "UsersConfig",
  "type": "object",
  "required": ["version", "users"],
  "properties": {
    "version": { "type": "string" },
    "users": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["user_id", "username", "password_hash", "roles", "clearance_level", "is_active"],
        "properties": {
          "user_id": { "type": "string", "minLength": 3 },
          "username": { "type": "string", "minLength": 3 },
          "password_hash": {
            "type": "string",
            "pattern": "^pbkdf2_sha256\\$\\d+\\$[A-Za-z0-9_-]+\\$[A-Za-z0-9_-]+$"
          },
          "roles": { "type": "array", "minItems": 1, "items": { "type": "string" } },
          "clearance_level": { "type": "integer", "minimum": 0, "maximum": 10 },
          "is_active": { "type": "boolean" },
          "unit": { "type": "string" },
          "metadata": { "type": "object" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

